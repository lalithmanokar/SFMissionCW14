{
    "name": "cloud-sf-extension-cap-sample",
    "version": "1.0.0",
    "description": "Successfactors Extension Application",
    "repository": "https://github.com/SAP-samples/cloud-sf-extension-cap-sample.git",
    "license": "Apache License 2.0",
    "dependencies": {
        "@sap/audit-logging": "^5.0.0",
        "@sap/cds": "^5",
        "@sap/hana-client": "^2.4.196",
        "@sap/xb-msg-amqp-v100": "^0.9.19",
        "@sap/xsenv": "^3.1.0",
        "@sap/xssec": "^3.1.2",
        "express": "^4",
        "passport": "^0.4.1"
    },
    "scripts": {
        "start": "cds run",
        "build": "cds build/all --clean"
    },
    "cds": {
        "auth": {
          "passport": {
            "strategy": "mock",
            "users": {
              "106010": {
                "roles": [
                  "authenticated-user",
                  "admin"
                ],
                "ID": "106010"
              }
            }
          }
        },
        "requires": {
          "uaa": {
            "kind": "xsuaa"
          },
          "messaging": {
            "kind": "enterprise-messaging-shared"
          },
          "FoundationPlatformPLT": {
            "kind": "odata",
            "model": "srv/external/FoundationPlatformPLT",
            "credentials": {
              "destination": "sfextension-dest",
              "path": "/odata/v2",
              "requestTimeout": 18000000
            }
          },
          "PLTUserManagement": {
            "kind": "odata",
            "model": "srv/external/PLTUserManagement",
            "credentials": {
              "destination": "sfextension-dest",
              "path": "/odata/v2",
              "requestTimeout": 18000000
            }
          },
          "ECSkillsManagement": {
            "kind": "odata",
            "model": "srv/external/ECSkillsManagement",
            "credentials": {
              "destination": "sfextension-dest",
              "path": "/odata/v2",
              "requestTimeout": 18000000
            }
          },
          "db": {
            "kind": "sqlite",
            "credentials": {
              "database": ":memory:"
            }
          }
        },
        "odata": {
          "version": "v4"
        }
      }
    }